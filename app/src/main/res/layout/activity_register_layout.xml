<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_shape"
    android:orientation="vertical" >

    <com.colorful.mqq.ui.TopTitle
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ttb_register_title"/>
    <!--<TextView
        android:id="@+id/ttb_register_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="注册"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/topTitleBar_default_background"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_10"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <EditText
                android:id="@+id/cet_register_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="输入用户名"
                android:inputType="text"
                android:paddingLeft="90dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp"
                android:textCursorDrawable="@null"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/cet_register_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:text="用户名"
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <EditText
                android:id="@+id/cet_register_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="输入昵称"
                android:inputType="text"
                android:paddingLeft="90dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp"
                android:textCursorDrawable="@null"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/cet_register_nickname"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:text="昵称"
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <EditText
                android:id="@+id/cet_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="填写密码"
                android:paddingLeft="90dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/tv_cet_register_password"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="密码"
                android:textColor="#353535"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/cet_register_password"
                android:layout_alignBottom="@+id/cet_register_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <EditText
                android:id="@+id/cet_register_repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="确认密码"
                android:paddingLeft="90dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/tv_cet_register_repassword"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="确认密码"
                android:textColor="#353535"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/cet_register_repassword"
                android:layout_alignBottom="@+id/cet_register_repassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:onClick="onRegisterCancel"
                android:id="@+id/btn_register_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@drawable/login_button_selector"
                android:textColor="@color/white"
                android:text="取消" />

            <Button
                android:onClick="onRegisterOk"
                android:id="@+id/btn_register_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@drawable/login_button_selector"
                android:textColor="@color/white"
                android:text="注册" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>